<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xwbing.domain.mapper.sys.SysUserMapper">
    <resultMap id="BaseResultMap" type="sysUser">
        <id column="id" property="id"/>
        <result column="create_time" property="createTime"/>
        <result column="modified_time" property="modifiedTime"/>
        <result column="user_name" property="userName"/>
        <result column="is_admin" property="isAdmin"/>
    </resultMap>
    <sql id="table">
        sys_user_info
    </sql>
    <sql id="base_column">
        user_id, user_name, password, phone
    </sql>
    <insert id="save" parameterType="com.xwbing.domain.entity.sys.SysUser" >
        <selectKey keyProperty="id" resultType="string" order="BEFORE">
              SELECT UUID()
        </selectKey>
        INSERT INTO sys_user_info(id,name,user_name,mail,is_admin,sex,create_time,modified_time) VALUES
        (#{id},#{name},#{userName},#{mail},#{isAdmin},#{sex},now(),now())
    </insert>
    <select id="findall" resultMap="BaseResultMap">
        select *
        from sys_user_info
    </select>

</mapper>